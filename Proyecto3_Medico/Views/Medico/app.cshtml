@using Proyecto3_Medico.Models;

<p>hola desde citas</p>
<div id="vacunacontainer" class="container  ">

    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <form>
                        <h7>Agendar Cita</h7>
                        <div>
                            <h7>Paciente: </h7>
                            <select name="Patient" id="Patient" class="form-control">
                                @foreach (patientModel temp in ViewBag.pacientes)
                                {
                                    <option value="@temp.patient_id">@temp.patient_id</option>
                                }

                            </select>
                        </div>
                        <div>
                            <h7>Centro de Salud: </h7>
                            <select name="healthCenter" id="healthCenter" class="form-control">
                                @foreach (centerModel temp in ViewBag.centro)
                                {
                                    <option value="@temp.centro_id">@temp.centro_nombre</option>
                                }
                            </select>
                        </div>
                        <div>
                            <h7>Especialidad: </h7>
                            <select name="especialidad" id="especialidad" class="form-control">
                                @foreach (espModel temp in ViewBag.especialidades)
                                {
                                    <option value="@temp.esp_id">@temp.esp_nombre</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <h7>Fecha Cita: </h7>
                            <input type="date" class="form-control" id="fechaCita" name="fechaCita">
                            <h7>Hora Cita: </h7>
                            <input type="time" class="form-control" id="HoraCita" name="HoraCita">
                           
                        </div>

                        <div>
                            <input type="button" href="javascript:;" onclick="registrarCita($('#Patient').val(),$('#healthCenter').val(),$('#fechaCita').val(),$('#HoraCita').val(),$('#especialidad').val()); return false;" id="registrar" name="registrar" value="Registrar" class="btn btn-primary" />

                        </div>
                        @*<div>
            <input type="submit" value="INGRESAR" />
        </div>*@
                    </form>
                </div>
            </div>
        </div>
</div>